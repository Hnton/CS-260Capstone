@model IEnumerable<PurchaseRequisition.Models.SupervisorApproval>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Pending Approvals", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Approval.ApprovalName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order.BusinessJustification)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeniedJustification)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.TimeStamp)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Approval.ApprovalName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Order.BusinessJustification)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeniedJustification)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.TimeStamp)
        </td>*@
        <td>
            @Html.ActionLink("Edit Approval", "Edit", new { id=item.ID })
        </td>
    </tr>
}

</table>
